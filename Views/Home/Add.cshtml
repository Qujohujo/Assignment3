@{
    ViewData["Title"] = "Enter New Movie";
}

@model Assignment3.Models.ApplicationResponse

<h1>@ViewData["Title"]</h1>
<br>
<!--Form for adding a new movie to the movies page-->
<form method="post">

    <!--Required fields-->

    @*<label for="category">Category</label>*@
    <label>Category</label>
    <br>
    <input type="text" name="category" id="category" asp-for="category">
    <br><br>

    @*<label for="title">Title</label>*@
    <label>Title</label>
    <br>
    <input type="text" name="title" id="title" asp-for="title">
    <br><br>

    @*<label for="year">Year</label>*@
    <label>Year</label>
    <br>
    <input type="text" name="year" id="year" asp-for="year">
    <br><br>

    @*<label for="director">Director</label>*@
    <label>Director</label>
    <br>
    <input type="text" name="director" id="director" asp-for="director">
    <br><br>

    <!--select for dropdown of rating-->
    @*<label for="rating">Rating</label>*@
    <label>Rating</label>
    <br>
    <select name="rating" id="rating" asp-for="rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br><br>


    <!--Optional fields-->

    <!--Radio button for yes/no edits-->
    <label>Edited</label>
    <br>
    <label for="edit">Yes</label>
    <input type="radio" name="edited" id="edit" value=Yes asp-for="edited">
    <br>
    <label for="noedit">No</label>
    <input type="radio" name="edited" id="noedit" value=No asp-for="edited">
    <br><br>

    @*<label for="lent">Lent To:</label>*@
    <label>Lent To:</label>
    <br>
    <input type="text" name="lent" id="lent" asp-for="lent">
    <br><br>

    @*<label for="notes">Notes</label>*@
    <label>Notes</label>
    <br>
    <input type="text" name="notes" id="notes" maxlength="25" asp-for="notes">
    <br>

    <div asp-validation-summary="All"></div>

    <br>
    <input type="submit" name="AddMovie" id="AddMovie">
</form>